# MongoDB Connection URL (Sample)
URL_DATABASE=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/dbname?retryWrites=true&w=majority

# Encryption Key (Sample - replace with a secure random key in production)
ENCRYPTION_KEY=YourSecureEncryptionKey123!

# GET Secret Key (Sample)
GET_SECKEY=sample_get_seckey_123456

# Server Port (Development)
PORT=3000

# Verification Secret Key (Sample - e.g., Stripe-like test key)
VERIFY_SECKEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Salt Rounds for Hashing (Recommended: 10-12)
SALTROUNDS=10